						class="flex flex-col gap-0.5 px-2 py-2 lg:flex-row lg:items-center lg:gap-1 lg:px-0 lg:py-0"
					>
						<!-- Offcanvas Header -->
						<div
							class="flex items-center justify-between border-b border-b-neutral-300 p-2 dark:border-b-neutral-700 lg:hidden"
						>
							<h3
								id="hs-header-base-label"
								class="font-bold text-gray-800 dark:text-white"
							>
