						<div class="grow pt-3 lg:pt-0">
							<div
								class="flex flex-col gap-0.5 lg:flex-row lg:items-center lg:justify-start lg:gap-1"
							>
								<!-- Company Dropdown -->
								<div
									class="hs-dropdown [--adaptive:none] [--is-collapse:true] [--offset:25] [--strategy:static] lg:[--is-collapse:false] lg:[--strategy:fixed] lg:[--trigger:click]"
								>
									<button
										id="hs-header-base-dropdown"
										type="button"
										class="hs-dropdown-toggle flex w-full items-center rounded-lg p-2 text-sm text-gray-800 hover:bg-gray-100 focus:bg-gray-100 focus:outline-none dark:text-neutral-200 dark:hover:bg-neutral-700 dark:focus:bg-neutral-700"
