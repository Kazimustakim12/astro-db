<!-- Clients -->
<section
	class="xl:py-18 border-b-1 border-t-1 mb-14 bg-gray-100 dark:border-neutral-700 dark:bg-neutral-800"
	data-aos="fade-up-sm"
	data-delay="50"
>
	<div class="relative overflow-hidden">
		<div
			class="bg-background relative flex w-full flex-col items-center justify-center overflow-hidden py-[18px] md:shadow-xl"
		>
			<Marquee pauseOnHover class="[--duration:40s]">
				{
					detailsLoop.map((item, index) => (
						<div class="flex min-w-[260px] items-center justify-center border-r border-r-neutral-200 p-3 dark:border-r-neutral-700">
							<div class="flex w-full flex-col items-center justify-center rounded-xl text-center">
								<h3 class="mb-2 text-2xl font-bold capitalize text-dbgreen-500">{item.title}</h3>
								<span class="text-sm font-thin uppercase tracking-wide text-black dark:text-white">
									{item.sub}
								</span>
							</div>
						</div>
					))
				}
			</Marquee>

			<div
				class="pointer-events-none absolute inset-y-0 left-0 w-1/3 bg-gradient-to-r from-white dark:from-neutral-900"
			>
