---
import PaymentMethods from './PaymentMethods.astro'
import { useTranslations, type Lang } from '@/i18n'
const t = useTranslations(Astro.currentLocale as Lang)
---

<!-- Clients -->
<div class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
	<!-- Title -->
	<div class="mx-auto mb-6 text-center sm:w-1/2 md:mb-12 xl:w-1/3">
		<h1
			class="text-5xl font-bold text-dbgreen-900"
			data-aos="fade-up-sm"
		>
			<span class="text-neutral-800 dark:text-white">
				{
					t({
						en: 'Our',
						ar: 'خاصتنا',
						es: 'Nuestro',
						fr: 'Notre',
						hi: 'हमारा',
						id: 'Kami',
						ms: 'Kami',
						th: 'ของเรา',
						vi: 'Của chúng tôi',
						bn: 'আমাদের',
						'zh-cn': '我们的',
						'pt-br': 'Nosso'
					})
				}
			</span>
			{
				t({
					en: 'Payment Methods',
					ar: 'طرق الدفع',
					es: 'Métodos de Pago',
					fr: 'Méthodes de Paiement',
					hi: 'भुगतान विधियाँ',
					id: 'Metode Pembayaran',
					ms: 'Kaedah Pembayaran',
					th: 'วิธีการชำระเงิน',
					vi: 'Phương Thức Thanh Toán',
					bn: 'পেমেন্ট পদ্ধতি',
					'zh-cn': '付款方式',
					'pt-br': 'Métodos de Pagamento'
				})
			}
		</h1>
	</div>
	<!-- End Title -->
	<PaymentMethods />
</div>
<!-- End Clients -->
