---
import { Image } from 'astro:assets'
import startTradingImage from '../../../images/start_trading.webp'
import Button from '@/components/ui/Button.astro'
import { useTranslations, type Lang } from '@/i18n'
const t = useTranslations(Astro.currentLocale as Lang)
---

<section class="py-9 md:py-14">
	<div class="container mx-auto px-4 sm:px-6 lg:px-8">
		<div class="text-center">
			<p
				class="mb-6 text-sm font-bold uppercase tracking-widest text-gray-700 dark:text-neutral-400"
				data-aos="fade-up-sm"
			>
				{
					t({
						en: 'How It Works',
						ar: 'كيف تعمل',
						es: 'Cómo funciona',
						fr: 'Comment ça marche',
						hi: 'यह कैसे काम करता है',
						id: 'Cara Kerjanya',
						ms: 'Bagaimana Ia Berfungsi',
						th: 'มันทำงานอย่างไร',
						vi: 'Cách thức hoạt động',
						bn: 'এটি কিভাবে কাজ করে',
						'zh-cn': '它是如何工作的',
						'pt-br': 'Como Funciona'
					})
				}
			</p>

			<h1
				class="text-5xl font-bold text-dbgreen-900"
				data-aos="fade-up-sm"
			>
				<span class="text-neutral-800 dark:text-white">
					{
						t({
							en: 'Start Trading in',
							ar: 'ابدأ التداول في',
							es: 'Comienza a operar en',
							fr: 'Commencez à trader dans',
							hi: '4 आसान चरणों में ट्रेडिंग शुरू करें',
							id: 'Mulai Trading dalam',
							ms: 'Mula Berniaga dalam',
							th: 'เริ่มต้นการซื้อขายใน',
							vi: 'Bắt đầu giao dịch trong',
							bn: 'ট্রেডিং শুরু করুন',
							'zh-cn': '开始交易',
							'pt-br': 'Comece a negociar em'
						})
					}</span
				>
				{
					t({
						en: '4 easy steps',
						ar: '4 خطوات سهلة',
						es: '4 pasos sencillos',
						fr: '4 étapes faciles',
						hi: '4 आसान चरणों',
						id: '4 langkah mudah',
						ms: '4 langkah mudah',
						th: '4 ขั้นตอนง่าย ๆ',
						vi: '4 bước dễ dàng',
						bn: '4 সহজ পদক্ষেপ',
						'zh-cn': '4个简单步骤',
						'pt-br': '4 passos fáceis'
					})
				}
			</h1>
			<p
				data-aos="fade-up-sm"
				class="mx-auto mt-4 max-w-2xl text-lg font-normal text-gray-700 dark:text-neutral-400 lg:text-xl lg:leading-8"
			>
				{
					t({
						en: 'Create your account with us and launch it with just 4 easy steps',
						ar: 'أنشئ حسابك معنا وانطلق به في 4 خطوات سهلة فقط',
						es: 'Crea tu cuenta con nosotros y lánzala en solo 4 pasos sencillos',
						fr: 'Créez votre compte chez nous et lancez-le en seulement 4 étapes faciles',
						hi: 'हमारे साथ अपना खाता बनाएं और केवल 4 आसान चरणों में इसे लॉन्च करें',
						id: 'Buat akun Anda bersama kami dan luncurkan dengan hanya 4 langkah mudah',
						ms: 'Buat akaun anda bersama kami dan laksanakan hanya dalam 4 langkah mudah',
