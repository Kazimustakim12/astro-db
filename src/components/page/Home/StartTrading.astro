				<div
					class="aspect-w-16 aspect-h-9 lg:aspect-none"
					data-aos="fade-left-sm"
					data-aos-delay="50"
				>
					<Image
						class="w-full rounded-xl object-cover"
						alt="start_trading"
						src={startTradingImage}
					/>
				</div>
				<!-- End Col -->

				<!-- Timeline -->
				<div>
					<!-- Heading -->
					<div class="mb-4">
						<h3
							class="text-xs font-bold uppercase text-dbgreen-900"
							data-aos="fade-up-sm"
						>
							{
								t({
									en: 'Steps',
									ar: 'خطوات',
									es: 'Pasos',
									fr: 'Étapes',
									hi: 'कदम',
									id: 'Langkah',
									ms: 'Langkah',
									th: 'ขั้นตอน',
									vi: 'Bước',
									bn: 'ধাপ',
									'zh-cn': '步骤',
									'pt-br': 'Passos'
