---
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import MetaTradeImage from '../../../images/mt5_bg_img.png'
---

<section class="pb-9 pt-12 md:py-14">
	<div class="container">
		<div class="relative">
