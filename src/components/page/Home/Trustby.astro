						<Marquee pauseOnHover class="[--duration:20s]">
							{
								TrustArray.map((item, index) => (
									<div class="rounded-xl text-center">
										<Image
											src={item.src}
											class="h-full w-[220px] object-contain px-6 contrast-0 invert-0 transition-all hover:brightness-0 hover:contrast-100 dark:invert"
											alt={item.alt}
											loading="lazy"
										/>
									</div>
								))
							}
						</Marquee>
						<div
