---
import { LOCALES, useTranslations, type Lang } from '@/i18n'
import CompanyIntro from '@/components/page/Home/CompanyIntro.astro'
import TraderSection from '@/components/page/Home/TraderSection.astro'
import CompanyNews from '@/components/page/Home/CompanyNews.astro'
import MarketsTab from '@/components/page/Home/MarketsTab.astro'
import IbBroker from '@/components/page/Home/IbBroker.astro'
import Patners from '@/components/page/Home/Partners.astro'
import StartTrading from '@/components/page/Home/StartTrading.astro'
import OurPayment from '@/components/page/Home/OurPayment.astro'
import Hero from '@/components/page/Home/Hero.astro'
import Layout from '@/layouts/Layout.astro'
