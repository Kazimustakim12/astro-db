---
import Button from '@/components/ui/Button.astro'
import { LOCALES } from '@/i18n'
import Layout from '@/layouts/Layout.astro'
import { useTranslations, type Lang } from '@/i18n'
import { Image } from 'astro:assets'
const t = useTranslations(Astro.currentLocale as Lang)

import circlePhoneImage from '@/images/phoneimage.png'
import Quality from '@/images/quality-img.png'
import Profes from '@/images/profes-img.png'
import Relibility from '@/images/reilibility-img.png'
import Knowledge from '@/images/knowledege-img.png'
const title = t({
	en: 'Why DBinvesting',
	ar: 'لماذا DBinvesting',
	es: '¿Por qué DBinvesting?',
	fr: 'Pourquoi DBinvesting',
	hi: 'क्यों DBinvesting',
	id: 'Mengapa DBinvesting',
	ms: 'Mengapa DBinvesting',
	th: 'ทำไม DBinvesting',
	vi: 'Tại sao DBinvesting',
	bn: 'কেন DBinvesting',
	'zh-hans': '为什么选择DBinvesting',
	'pt-br': 'Por que DBinvesting'
})

export const getStaticPaths = () =>
	Object.keys(LOCALES).map((lang) => ({
		params: { lang }
	}))
---

<Layout title={title}>
	<section>
		<div
			class="relative z-20 w-full overflow-hidden bg-gray-100 py-3 before:absolute before:start-1/2 before:top-0 before:-z-[1] before:size-full before:-translate-x-1/2 before:transform before:bg-[url('/src/images/world_bg.png')] before:bg-center before:bg-no-repeat before:opacity-25 before:hue-rotate-60 dark:bg-black dark:before:bg-[url('/src/images/world_bg.png')]"
		>
			<div class="container pb-[250px] pt-10">
				<div class="flex flex-col gap-5 md:flex-row">
					<div class="max-w-2/4 w-full">
						<h1 class="mb-3 text-6xl font-thin">
							<span class="font-bold text-dbgreen-600"
								>{
									t({
										en: 'Why ',
										ar: 'لماذا ',
										es: '¿Por qué ?',
										fr: 'Pourquoi ',
										hi: 'क्यों ',
										id: 'Mengapa ',
										ms: 'Mengapa ',
										th: 'ทำไม ',
										vi: 'Tại sao ',
										bn: 'কেন ',
										'zh-hans': '为什么选择',
										'pt-br': 'Por que '
									})
								}</span
							> DB Investing
						</h1>
						<p class="text-color mb-2 font-semibold">
							{
								t({
									en: 'We won the trust of clients from many countries',
									ar: 'لقد اكتسبنا ثقة العملاء من العديد من الدول',
									es: 'Hemos ganado la confianza de clientes de muchos países',
									fr: 'Nous avons gagné la confiance de clients venus de nombreux pays',
									hi: 'हमने कई देशों के ग्राहकों का विश्वास जीता है',
									id: 'Kami telah memenangkan kepercayaan klien dari banyak negara',
									ms: 'Kami telah memperoleh kepercayaan pelanggan dari banyak negara',
									th: 'เราได้รับความไว้วางใจจากลูกค้าจากหลายประเทศ',
									vi: 'Chúng tôi đã giành được niềm tin của khách hàng từ nhiều quốc gia',
									bn: 'আমরা বহু দেশের ক্লায়েন্টদের বিশ্বাস অর্জন করেছি',
									'zh-hans': '我们赢得了来自多个国家客户的信任',
									'pt-br': 'Ganhamos a confiança de clientes de muitos países'
								})
							}
						</p>
						<p class="text- text-color font-thin">
							{
								t({
									en: 'Our company strives to become one of the most popular world brokers. We value the trust of our clients and remain providing reliable services and creating long-term relationships with our traders and partners.',
									ar: 'تسعى شركتنا لتصبح واحدة من أكثر الوسطاء شهرة في العالم. نحن نقدر ثقة عملائنا ونواصل تقديم خدمات موثوقة وإنشاء علاقات طويلة الأمد مع متداولينا وشركائنا.',
									es: 'Nuestra empresa se esfuerza por convertirse en uno de los corredores más populares del mundo. Valoramos la confianza de nuestros clientes y seguimos brindando servicios confiables y creando relaciones a largo plazo con nuestros traders y socios.',
									fr: "Notre entreprise s'efforce de devenir l'un des courtiers les plus populaires au monde. Nous apprécions la confiance de nos clients et continuons à fournir des services fiables tout en créant des relations à long terme avec nos traders et partenaires.",
