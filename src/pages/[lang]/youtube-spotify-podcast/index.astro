		<div class="container flex flex-col justify-center py-10 text-center">
			<h1
				class="mb-3 block text-2xl font-bold capitalize text-gray-800 dark:text-white sm:text-2xl md:text-3xl lg:text-3xl"
			>
				{
					t({
						en: 'YouTube Podcast',
						ar: 'بودكاست يوتيوب',
						es: 'Podcast de YouTube',
						fr: 'Podcast YouTube',
						hi: 'यूट्यूब पॉडकास्ट',
						id: 'Podcast YouTube',
						ms: 'Podcast YouTube',
						th: 'พอดแคสต์ YouTube',
						vi: 'Podcast YouTube',
						bn: 'ইউটিউব পডকাস্ট',
						'zh-hans': 'YouTube 播客',
						'pt-br': 'Podcast do YouTube'
					})
